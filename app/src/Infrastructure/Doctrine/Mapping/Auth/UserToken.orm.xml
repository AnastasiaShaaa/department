<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Department\Module\Auth\Model\UserToken" table="user_tokens">
        <id name="id" type="integer">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="token" type="string" length="32"/>
        <field name="expiredAt" type="datetime_immutable"/>
        <field name="createdAt" column="created_at" type="datetime_immutable" >
            <options>
                <option name="default">CURRENT_TIMESTAMP</option>
            </options>
        </field>

        <many-to-one field="user" target-entity="Department\Module\Auth\Model\User">
            <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
