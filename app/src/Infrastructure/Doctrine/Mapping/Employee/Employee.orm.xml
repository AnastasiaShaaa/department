<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Department\Module\Employee\Model\Employee" table="employees">
        <indexes>
            <index name="employee_email_idx" columns="email"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="fullname" type="string" length="255"/>
        <field name="email" type="email_type" length="50" unique="true" />
        <field name="phone" type="phone_type" nullable="true" />
        <field name="age" type="integer" nullable="true" />
        <field name="address" type="string" length="255" nullable="true" />
        <field name="experience" type="string" length="50" nullable="true" />
        <field name="deletedAt" type="datetime_immutable" nullable="true"/>
        <field name="createdAt" type="datetime_immutable" >
            <options>
                <option name="default">CURRENT_TIMESTAMP</option>
            </options>
        </field>
        <field name="updatedAt" type="datetime_immutable" >
            <options>
                <option name="default">CURRENT_TIMESTAMP</option>
            </options>
        </field>

        <many-to-one field="grade" target-entity="Department\Module\Grade\Model\Grade" inversed-by="employees">
            <join-column name="grade_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

<!--        <lifecycle-callbacks>-->
<!--            <lifecycle-callback type="prePersist" method="doUpdateAt"/>-->
<!--        </lifecycle-callbacks>-->
    </entity>

</doctrine-mapping>