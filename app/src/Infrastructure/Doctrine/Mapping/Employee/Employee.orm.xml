<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Department\Module\Employee\Model\Employee" table="employees">
        <indexes>
            <index name="employee_email_idx" columns="email"/>
        </indexes>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="fullname" column="fullname" type="string" length="255"/>
        <field name="email" column="email" type="email_type" length="50" unique="true" />
        <field name="phone" column="phone" type="phone_type" nullable="true" />
        <field name="age" column="age" type="integer" nullable="true" />
        <!--        <field name="birthday" column="birthday" type="date_immutable" nullable="true" />-->
        <field name="address" column="address" type="string" length="255" nullable="true" />
        <field name="experience" column="experience" type="string" length="50" nullable="true" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" />

        <one-to-one field="grade" target-entity="Department\Module\Employee\Model\EmployeeGrade" mapped-by="employee" orphan-removal="true">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
        </one-to-one>

    </entity>

</doctrine-mapping>