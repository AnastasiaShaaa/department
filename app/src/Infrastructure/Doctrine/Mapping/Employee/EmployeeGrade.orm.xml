<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Department\Module\Employee\Model\EmployeeGrade" table="employee_grade">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <one-to-one field="employee" target-entity="Department\Module\Employee\Model\Employee">
            <join-column name="employee_id" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

        <one-to-one field="grade" target-entity="Department\Module\Grade\Model\Grade">
            <join-column name="grade_id" referenced-column-name="id" on-delete="CASCADE"/>
        </one-to-one>

    </entity>

