<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Department\Module\Grade\Model\Grade" table="grades">

        <unique-constraints>
            <unique-constraint columns="name, department_id" name="grade_search_idx" />
        </unique-constraints>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="name" column="name" type="enum_grade_type" length="100" unique="true" />
        <field name="description" column="description" type="string" length="100" nullable="true" />
        <field name="instruction" column="instruction" type="string" length="250" nullable="true" />
        <field name="salary" column="salary" type="integer" length="50" />
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" />

        <many-to-one field="department" target-entity="Department\Module\Department\Model\Department" inversed-by="grades">
            <join-column name="department_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <one-to-one field="employee" target-entity="Department\Module\Employee\Model\EmployeeGrade" mapped-by="grade" orphan-removal="true">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
        </one-to-one>

    </entity>

</doctrine-mapping>
